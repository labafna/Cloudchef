---
import PageLayout from "../layouts/pageLayout.astro";
import ModeToggle from "../components/ModeToggle.astro";
import FoodBrandInfo from "../components/BrandInfo.astro";
import BrandsAndChefs from "../components/BrandsAndChefs.astro";
import Testimonials from "../components/Testimonials.astro";
import Cost from "../components/Cost.astro";
import OrderNow from "../components/OrderNow.astro";
import Footer from "../components/Footer.astro";
import Features from "../components/Features.astro";

import data from "../config/data.json";
---

<PageLayout>
  <div class="flex flex-col">
    <section class="flex flex-col pb-12 md:pb-24 pt-6 md:pt-4">
      <ModeToggle selectedMode="brand" />
      <span class="mt-12"></span>
      <FoodBrandInfo {...data.brand.foodBrandInfo} />
    </section>
    <BrandsAndChefs />
    <Features {...data.brand.features} />
    <Testimonials {...data.brand.testimonial} />
    <Cost {...data.brand.offer} />
    <OrderNow />
    <Footer />
  </div>
</PageLayout>
