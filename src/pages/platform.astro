---
import PageLayout from "../layouts/pageLayout.astro";
import ModeToggle from "../components/ModeToggle.astro";
import FoodBrandInfo from "../components/BrandInfo.astro";
import Chef from "../components/Chef.astro";
import News from "../components/News.astro";
import Testimonials from "../components/Testimonials.astro";
import Cost from "../components/Cost.astro";
import OrderNow from "../components/OrderNow.astro";
import Footer from "../components/Footer.astro";
import Features from "../components/Features.astro";
import MobileVideo from "../components/MobileVideo.astro";

import data from "../config/data.json";
---

<PageLayout>
  <div class="flex flex-col">
    <section class="background flex flex-col pb-12 md:pb-24 pt-6 md:pt-4">
      <ModeToggle selectedMode="platform" />
      <span class="mt-12"></span>
      <FoodBrandInfo {...data.platform.foodBrandInfo} />
    </section>
    <Chef />
    <News />
    <Features {...data.platform.features} />
    <MobileVideo videoUrl={data.platform.foodBrandInfo.videoUrl} />
    <Testimonials {...data.platform.testimonial} />
    <Cost {...data.platform.offer} />
    <OrderNow />
    <Footer />
  </div>
</PageLayout>

<style>
  @media (max-width: 768px) {
    .background {
      background-image: url("/images/backgroundImage.png");
    }
  }
</style>
